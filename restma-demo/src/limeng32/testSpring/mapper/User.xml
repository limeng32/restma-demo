<?xml version ="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="limeng32.testSpring.mapper.UserMapper">
	<cache />
	<sql id="tableName">user</sql>
	<sql id="columns">id,name,address,nickname</sql>
	<sql id="conditions">
		<where>
			<if test="id != null">and id = #{id}</if>
			<if test="name != null">and name like #{name}</if>
			<if test="address != null">and address like #{address}</if>
			<if test="nickname != null">
				and nickname like #{nickname}
			</if>
			<include refid="limeng32.testSpring.mapper.PojoMapper.dealIsable" />
		</where>
	</sql>

	<select id="select" parameterType="int" resultMap="result">
		select
		<include refid="columns" />
		from
		<include refid="tableName" />
		where id=#{id}
	</select>

	<select id="selectAll" parameterType="hashMap" resultMap="result">
		select
		<include refid="columns" />
		from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<select id="count" parameterType="hashMap" resultType="int">
		select count(id) from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<insert id="insert" parameterType="User" useGeneratedKeys="true"
		keyProperty="id">
		insert into
		<include refid="tableName" />
		(name,address,nickname,isable)
		values(#{name},#{address},#{nickname},'1')
	</insert>

	<update id="update" parameterType="User">
		update
		<include refid="tableName" />
		<set>
			<if test="id != null">id=#{id},</if>
			<if test="name != null">name=#{name},</if>
			<if test="address != null">address=#{address},</if>
		</set>
		where id=#{id}
	</update>

	<resultMap id="result" type="User" autoMapping="true">
		<id property="id" column="id" />
		<collection property="article" ofType="Article" />
		<collection property="publisher" ofType="Publisher" />
	</resultMap>
</mapper>
