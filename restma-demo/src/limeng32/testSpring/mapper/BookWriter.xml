<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="limeng32.testSpring.mapper.BookWriterMapper">
	<cache />
	<sql id="tableName">BookWriter</sql>
	<sql id="columns">
		<include refid="tableName" />
		.id,
		<include refid="tableName" />
		.bookid,
		<include refid="tableName" />
		.writerid
	</sql>

	<sql id="conditions">
		<where>
			<if test="id != 0">and id = #{id}</if>
			<if test="book != null">
				and
				<include refid="tableName" />
				.bookid =
				<include refid="limeng32.testSpring.mapper.BookMapper.tableName" />
				.id
				<if test="book.id != 0">
					and
					<include refid="limeng32.testSpring.mapper.BookMapper.tableName" />
					.id = #{book.id}
				</if>
				<if test="book.title != null">
					and
					<include refid="limeng32.testSpring.mapper.BookMapper.tableName" />
					.title like #{book.title}
				</if>
			</if>
			<if test="writer != null">
				and
				<include refid="tableName" />
				.writerid =
				<include refid="limeng32.testSpring.mapper.WriterMapper.tableName" />
				.id
				<if test="writer.id != 0">
					and
					<include refid="limeng32.testSpring.mapper.WriterMapper.tableName" />
					.id = #{writer.id}
				</if>
				<if test="writer.name != null">
					and
					<include refid="limeng32.testSpring.mapper.WriterMapper.tableName" />
					.name like #{writer.name}
				</if>
			</if>
			<include refid="limeng32.testSpring.mapper.PojoMapper.dealIsable" />
		</where>
	</sql>

	<select id="select" resultMap="result"></select>

	<select id="selectAll" resultMap="result">
		select
		<include refid="columns" />
		from
		<include refid="tableName" />
		<if test="book != null">
			,
			<include refid="limeng32.testSpring.mapper.BookMapper.tableName" />
		</if>
		<if test="writer != null">
			,
			<include refid="limeng32.testSpring.mapper.WriterMapper.tableName" />
		</if>
		<include refid="conditions" />
	</select>

	<select id="count" resultType="int">
		select count(id) from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<insert id="insert" parameterType="BookWriter" useGeneratedKeys="true"
		keyProperty="id">
		insert into
		<include refid="tableName" />
		(bookid, writerid
		, isable) values(#{book.id},#{writer.id}
		,'1')
	</insert>

	<update id="update" parameterType="BookWriter">
		update
		<include refid="tableName" />
		<set>
			<if test="id != null">id=#{id},</if>
			<if test="book != null and book.id != 0">bookid=#{book.id},</if>
			<if test="writer != null and writer.id != 0">writerid=#{writer.id},</if>
		</set>
		where id=#{id}
	</update>

	<update id="disable" parameterType="BookWriter">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.disable" />
	</update>

	<update id="enable" parameterType="BookWriter">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.enable" />
	</update>

	<resultMap id="result" type="BookWriter" autoMapping="true">
		<id property="id" column="id" />
		<association property="book" javaType="Book"
			select="limeng32.testSpring.mapper.BookMapper.select" column="bookid" />
		<association property="writer" javaType="Writer"
			select="limeng32.testSpring.mapper.WriterMapper.select" column="writerid" />
	</resultMap>
</mapper>