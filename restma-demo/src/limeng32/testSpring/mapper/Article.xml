<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="limeng32.testSpring.mapper.ArticleMapper">
	<cache />
	<sql id="tableName">article</sql>
	<sql id="columns">id,userid,title,content</sql>

	<sql id="conditions">
		<where>
			<if test="id != 0">and id = #{id}</if>
			<if test="user != null and user.id != 0">
				and userid = #{user.id}
			</if>
			<if test="title != null">and title like #{title}</if>
			<if test="content != null">and content like #{content}</if>
			<include refid="limeng32.testSpring.mapper.PojoMapper.dealIsable" />
		</where>
	</sql>

	<select id="select" resultMap="result"></select>

	<select id="selectAll" resultMap="result">
		select
		<include refid="columns" />
		from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<select id="count" resultType="int">
		select count(id) from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<insert id="insert1" parameterType="Article" useGeneratedKeys="true"
		keyProperty="id">
		insert into
		<include refid="tableName" />
		(title,content
		<if test="user != null and user.id > 0">,userid</if>
		,isable) values(#{title},#{content}
		<if test="user != null and user.id > 0">,#{user.id}</if>
		,'1')
	</insert>

	<insert id="insert" parameterType="Article" useGeneratedKeys="true"
		keyProperty="id"></insert>

	<update id="update" parameterType="Article">
		update
		<include refid="tableName" />
		<set>
			<if test="id != null">id=#{id},</if>
			<if test="title != null">title=#{title},</if>
			<if test="content != null">content=#{content},</if>
			<choose>
				<when test="user == null">userid=null,</when>
				<when test="user != null and user.id > 0">
					userid=#{user.id},
				</when>
			</choose>
		</set>
		where id=#{id}
	</update>

	<update id="disable" parameterType="Article">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.disable" />
	</update>

	<update id="enable" parameterType="Article">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.enable" />
	</update>

	<resultMap id="result" type="Article" autoMapping="true">
		<id property="id" column="id" />
		<association property="user" javaType="User"
			select="limeng32.testSpring.mapper.UserMapper.select" column="userid" />
	</resultMap>
</mapper>