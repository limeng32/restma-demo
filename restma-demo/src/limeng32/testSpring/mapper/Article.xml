<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="limeng32.testSpring.mapper.ArticleMapper">
	<cache />
	<sql id="tableName">article</sql>
	<sql id="columns">id,userid,title,content</sql>

	<sql id="conditions">
		<where>
			<if test="id != 0">and id = #{id}</if>
			<if test="user != null and user.id != 0">
				and userid = #{user.id}
			</if>
			<if test="title != null">and title like #{title}</if>
			<if test="content != null">and content like #{content}</if>
		</where>
	</sql>

	<select id="select" resultMap="result"></select>

	<select id="selectAll" resultMap="result">
		select
		<include refid="columns" />
		from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<select id="count" resultType="int">
		select count(id) from
		<include refid="tableName" />
		<include refid="conditions" />
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id"></insert>

	<update id="update" />

	<update id="updatePersistent" />

	<delete id="delete" />

	<update id="disable" parameterType="Article">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.disable" />
	</update>

	<update id="enable" parameterType="Article">
		update
		<include refid="tableName" />
		<include refid="limeng32.testSpring.mapper.PojoMapper.enable" />
	</update>

	<resultMap id="result" type="Article" autoMapping="true">
		<id property="id" column="id" />
		<association property="user" javaType="User"
			select="limeng32.testSpring.mapper.UserMapper.select" column="userid" />
	</resultMap>
</mapper>